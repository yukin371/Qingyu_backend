# 服务器配置
SERVER_PORT=8080
SERVER_MODE=debug

# 数据库配置
DB_URI=mongodb://localhost:27017
DB_NAME=Qingyu_writer
MONGO_CONNECT_TIMEOUT=10
MONGO_MAX_POOL_SIZE=100
MONGO_MIN_POOL_SIZE=10
MONGO_MAX_CONN_IDLE_TIME=60
MONGO_RETRY_WRITES=true
MONGO_RETRY_READS=true

# JWT配置
JWT_SECRET=qingyu_secret_key
JWT_EXPIRATION_HOURS=24

# AI服务配置
# AI提供商 (openai, claude, gemini, etc.)
AI_PROVIDER=openai

# API密钥（必填）
AI_API_KEY=your_api_key_here

# API基础URL
AI_BASE_URL=https://api.openai.com/v1

# 默认模型
AI_DEFAULT_MODEL=gpt-3.5-turbo

# 请求超时时间（秒）
AI_TIMEOUT=30

# 最大重试次数
AI_MAX_RETRIES=3

# 重试间隔（秒）
AI_RETRY_INTERVAL=1

# 代理URL（可选）
AI_PROXY_URL=

# 上下文配置
AI_MAX_TOKENS=4000
AI_DEFAULT_HISTORY_DEPTH=3
AI_DEFAULT_OUTLINE_DEPTH=2
AI_DEFAULT_INCLUDE_HISTORY=true
AI_DEFAULT_INCLUDE_OUTLINE=true
AI_CONTEXT_CACHE_EXPIRATION=300

# 缓存配置
AI_CACHE_ENABLED=true
AI_CACHE_TYPE=memory
AI_CACHE_REDIS_URL=
AI_CACHE_DEFAULT_EXPIRATION=3600
AI_CACHE_CLEANUP_INTERVAL=600
AI_CACHE_MAX_SIZE=1000

# 限流配置
AI_RATE_LIMIT_ENABLED=true
AI_RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_HOUR=1000
AI_RATE_LIMIT_PER_DAY=10000
AI_RATE_LIMIT_BURST_SIZE=10