# 数据库配置
QINGYU_DATABASE_URI=mongodb://localhost:27017
QINGYU_DATABASE_NAME=Qingyu_writer
QINGYU_DATABASE_CONNECT_TIMEOUT=10s
QINGYU_DATABASE_MAX_POOL_SIZE=100
QINGYU_DATABASE_MIN_POOL_SIZE=10
QINGYU_DATABASE_MAX_CONN_IDLE_TIME=60s
QINGYU_DATABASE_RETRY_WRITES=true
QINGYU_DATABASE_RETRY_READS=true

# 服务器配置
QINGYU_SERVER_PORT=8080
QINGYU_SERVER_MODE=debug

# JWT配置
QINGYU_JWT_SECRET=qingyu_secret_key
QINGYU_JWT_EXPIRATION_HOURS=24

# AI配置
QINGYU_AI_API_KEY=your_api_key_here
QINGYU_AI_BASE_URL=https://api.openai.com/v1
QINGYU_AI_MAX_TOKENS=2000
QINGYU_AI_TEMPERATURE=7

# OAuth配置 - Google
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# OAuth配置 - GitHub
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# OAuth配置 - QQ (可选)
QQ_CLIENT_ID=your_qq_client_id_here
QQ_CLIENT_SECRET=your_qq_client_secret_here